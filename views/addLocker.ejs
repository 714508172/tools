<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        .form{
            margin: 50px auto;
            text-align: center;
        }

        input{
            vertical-align: -1px;
            margin-bottom: 30px;
        }
        span{
            display: inline-block;
            width: 200px;
            text-align: right;
        }

        h2{
            text-align: center;
            padding-left: 130px;
            margin-top: 50px;
        }

    </style>
</head>

<body>
    <h2 >添加工具柜</h2>
    <div class="form">
        <span>工具柜编号： </span><input type="text" id="lockerID"></br>
        <span>名称： </span><input type="text" id="name"></br>
        <span>所属群组： </span><input type="text" id="groupNum">
    </br>
    <button id="submit">提交</button>
    <button id="back">返回</button>
    </div>
   
</body>
</html>
<script>
            
            var btn = document.querySelector('#submit')
            var back = document.querySelector('#back')

            btn.addEventListener('click',function(){
                var inputList = document.querySelectorAll('input')
                var num =inputList[0].value
                var name =inputList[1].value
                var group =inputList[2].value
                axios.get('/submitAdd', {
                    params:{
                        num:num,
                        name:name,
                        group:group
                    }
                }).then((res)=>{

                    if(res.data.error==0){
                        alert('工具柜已存在')
                    }else{
                        
                    alert('新增成功')
                    window.location.reload()
                    }
                    
                })
            })

            back.addEventListener('click',function(){
                history.back(-1)
            })


</script>